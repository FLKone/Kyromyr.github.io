:global string cf.Error
:global string cf.Item
:global int cf.Tier
:global int cf.Amount
:global int cf.Upgrade
:global string cfcm
:local int i

waituntil(isopen("factory") == false | cf.Error != "")
stop("factory-craft")
stop("factory-prepare")
stop("factory-parser")
stop("factory-data")
stop("factory-input")
gss("<color=yellow>Factory", cf.Error)
cf.Item = ""
cf.Tier = 0
cf.Amount = 0
cf.Upgrade = 0
cfcm = ""
cfcmLoop:
	gis("cfcm." . i, 0)
	i += 1
	gotoif(cfcmLoop, i < 10)
cf.Error = ""